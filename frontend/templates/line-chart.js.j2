// === setup chart ===
const lineChartLabels = [{{ labels | join(', ') }}]
const lineChartData = {
    labels: lineChartLabels,
    datasets: [{
        label: 'green',
        backgroundColor: 'rgb(51,255,51)',
        borderColor: 'rgb(51,255,51)',
        data: [{{ green_values | join(', ') }}],
    },
    ]
};

// === config chart ===
const lineChartConfig = {
    type: 'line',
    data: lineChartData,
    options: {}
};

// === display chart ===
var myLineChart = new Chart(
    document.getElementById('line_chart'),
    lineChartConfig
);
